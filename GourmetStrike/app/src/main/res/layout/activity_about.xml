<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    android:orientation="horizontal"
    android:padding="@dimen/margin_small">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/closeImageButton"
        android:layout_toLeftOf="@+id/closeImageButton"
        android:layout_toStartOf="@+id/closeImageButton"
        android:orientation="vertical"
        android:padding="@dimen/margin_small">

        <TextView
            style="@style/AboutNormalTextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_main" />


        <TextView
            style="@style/AboutBoldTextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/made_by_title" />

        <TextView
            style="@style/AboutNormalTextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/made_by_authors" />

        <TextView
            style="@style/AboutBoldTextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/made_by_ios_title" />

        <TextView
            style="@style/AboutNormalTextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/made_by_ios_authors" />

        <TextView
            style="@style/AboutBoldTextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/made_by_android_title" />

        <TextView
            style="@style/AboutNormalTextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/made_by_android_authors" />

        <TextView
            style="@style/AboutNormalTextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/translate_by" />

    </LinearLayout>

    <ImageButton

        android:id="@+id/closeImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:background="@null"
        android:src="@drawable/close" />
</RelativeLayout>